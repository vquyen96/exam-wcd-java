<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <servlet>
        <servlet-name>SavePhoneController</servlet-name>
        <servlet-class>com.exam.controller.SavePhoneController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SavePhoneController</servlet-name>
        <url-pattern>/phone/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListPhoneController</servlet-name>
        <servlet-class>com.exam.controller.ListPhoneController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListPhoneController</servlet-name>
        <url-pattern>/phone</url-pattern>
    </servlet-mapping>
</web-app>